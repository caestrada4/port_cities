<odoo>
  <record id="view_site_dynamic_requirement_tree" model="ir.ui.view">
    <field name="name">site.dynamic.requirement.tree</field>
    <field name="model">site.dynamic.requirement</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="model_name"/>
        <field name="field_name"/>
        <field name="stage_id"/>
        <field name="error_message"/>
      </tree>
    </field>
  </record>

  <record id="view_site_dynamic_requirement_form" model="ir.ui.view">
    <field name="name">site.dynamic.requirement.form</field>
    <field name="model">site.dynamic.requirement</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="model_name"/>
            <field name="field_name"/>
            <field name="stage_id"/>
            <field name="error_message"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_site_dynamic_requirement" model="ir.actions.act_window">
    <field name="name">Requirements</field>
    <field name="res_model">site.dynamic.requirement</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem id="menu_site_requirements" name="Requirements" parent="menu_sites_root" action="action_site_dynamic_requirement" sequence="10"/>
</odoo>
