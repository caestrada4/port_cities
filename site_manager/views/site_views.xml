<odoo>
  <!-- Action: open Sites (projects) -->
  <record id="action_sites" model="ir.actions.act_window">
    <field name="name">Sites</field>
    <field name="res_model">project.project</field>
    <field name="view_mode">kanban,tree,form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Create your Sites.
      </p>
    </field>
  </record>

  <!-- Menu under Project -->
  <menuitem id="menu_sites_root" name="Sites" parent="project.menu_projects" action="action_sites" sequence="50"/>

  <!-- Inherit project form to add fields -->
  <record id="view_project_form_inherit_site" model="ir.ui.view">
    <field name="name">project.project.form.site.inherit</field>
    <field name="model">project.project</field>
    <field name="inherit_id" ref="project.view_project_form"/>
    <field name="arch" type="xml">
      <xpath expr="//sheet" position="inside">
        <group string="Site Info" name="site_info" colspan="2">
          <field name="deadline"/>
          <field name="budget"/>
          <field name="project_size"/>
          <field name="stage_id"/>
        </group>
      </xpath>
    </field>
  </record>

  <!-- Make Kanban group by stage default (action already defines views) -->
  <record id="view_project_kanban_inherit" model="ir.ui.view">
    <field name="name">project.project.kanban.site.inherit</field>
    <field name="model">project.project</field>
    <field name="inherit_id" ref="project.view_project_kanban"/>
    <field name="arch" type="xml">
      <xpath expr="//templates" position="inside">
        <!-- keep default -->
      </xpath>
    </field>
  </record>
</odoo>
